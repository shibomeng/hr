<% include ./partials/header %>

<header class="container">
    <div class="jumbotron">
        <h1 style="color: white;">Count Items In Order</h1>
        <form action="/count_items" method="POST">
            <div class="form-group" id="Name">
				<select name='OrderID' class="form-control custom-select" required> 
					<option value = "" disabled selected>By Order ID</option>
					<%if (locals.orderID) {%>
						<%orderID.forEach(function(m) {%>
							<%for (var key in m) {%>
								<option value="<%= m[key] %>"><%= m[key] %></option>
							<%}%>
						<%});%>
					<%}%>
				</select>
            </div>
            <div class="form-group" id="Name">
				<select name='Select' class="form-control custom-select" required>
					<option value = "" disabled selected>By Goods</option>
                    <option value = "Menu">Menu</option>
                    <option value = "Flower">Flower/Decor</option>
                    <option value = "Entertainment">Entertainment</option>
				</select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg">Search</button>
            </div>
        </form>
    </div>
</header>

<div class="container" id="data">
    <table class="table">
        <thead>
             <%if (locals.result) {%>
                    <%[result[0]].forEach(function(m) {%>
                        <tr>
                            <%for (var key in m) {%>
                                <td>
                                    <%=key%>
                                </td>
                            <%}%>
                        </tr>
                    <%});%>
                <%}%>
        </thead>
        <tbody>
                <%if (locals.result) {%>
                    <%result.forEach(function(m) {%>
                        <tr>
                            <%for (var key in m) {%>
                                <td>
                                    <%=m[key]%>
                                </td>
                            <%}%>
                        </tr>
                    <%});%>
                <%}%>
        </tbody>
    </table>
</div>

<% include ./partials/footer %>