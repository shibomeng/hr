<% include ./partials/header %>

<header class="container">
    <div class="jumbotron">
        <h1 style="color: white;">Search Menu/Decor/Entertainment Corresponding Information</h1>
        <form action="/query_menu_item" method="POST">
            <div class="form-group" id="Name">
				<select name='Name' class="form-control custom-select" required>
					<option value="" disabled selected>All Goods</option>
					<%if (locals.menu) {%>
						<%menu.forEach(function(m) {%>
							<%for (var key in m) {%>
								<option value="<%= m[key] %>"><%= m[key] %></option>
							<%}%>
						<%});%>
                    <%}%>
                    <%if (locals.decor) {%>
						<%decor.forEach(function(m) {%>
							<%for (var key in m) {%>
								<option value="<%= m[key] %>"><%= m[key] %></option>
							<%}%>
						<%});%>
                    <%}%>
                    <%if (locals.entertainment) {%>
						<%entertainment.forEach(function(m) {%>
							<%for (var key in m) {%>
								<option value="<%= m[key] %>"><%= m[key] %></option>
							<%}%>
						<%});%>
					<%}%>
				</select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg">Search</button>
            </div>
        </form>
    </div>
</header>

<div class="container" id="data">
    <table class="table">
        <thead>
            <%if (locals.info) {%>
                    <%[info[0]].forEach(function(m) {%>
                        <tr>
                            <%for (var key in m) {%>
                                <td>
                                    <%=key%>
                                </td>
                            <%}%>
                        </tr>
                    <%});%>
                <%}%>
        </thead>
        <tbody>
                <%if (locals.info) {%>
                    <%info.forEach(function(m) {%>
                        <tr>
                            <%for (var key in m) {%>
                                <td>
                                    <%=m[key]%>
                                </td>
                            <%}%>
                        </tr>
                    <%});%>
                <%}%>
        </tbody>
    </table>
</div>

<% include ./partials/footer %>